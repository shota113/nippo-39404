<%= render "shared/header" %>
  <div class='main'>

    <div class='diary-contents' >
      <h2 class='title' >日報一覧</h2>
    </div>
    <ul class='diary-lists'>
      <li class='list'>
        <%= link_to '#' do %>
        <div class='diary-img-content'>
          <%= image_tag 'diary-sample.png', class: 'diary-img' %>
        </div>
        <div class='diary-info'>
          <h3 class='diary-name'>
            <%= "現場名" %>
          </h3>
        </div>
        <% end %>
      </li>
    </ul>
    
  </div>
  <%= link_to('diaries/new', class: 'purchase-btn') do %>
    <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>