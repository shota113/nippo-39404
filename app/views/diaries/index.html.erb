<%= render "shared/header" %>
  <div class='main'>

    <div class='diary-contents' >
      <h2 class='title' >日報一覧</h2>
    </div>
    <ul class='diary-lists'>

    <% @diaries.each do |diary| %>
      <li class='list'>
        <%= link_to diary_path(diary) do %>
          <div class='diary-img-content'>
            <%= image_tag diary.image, class: 'diary-img' %>
          </div>
          <div class='diary-info'>
            <h3 class='diary-name'>
              <%= diary.place %>
            </h3>
          </div>
        <% end %>
      </li>
    <% end %>
    <% if @diaries.blank? then %>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "diary-img" %>
        <div class='diary-info'>
          <h3 class='diary-name'>
            投稿してみよう！
          </h3>
        </div>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
  <%= link_to('diaries/new', class: 'purchase-btn') do %>
    <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>